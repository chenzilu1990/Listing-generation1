generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id               String   @id @default(cuid())
  title            String
  brand            String
  price            Float
  currency         String
  sku              String   @unique
  upc              String?
  quantity         Int
  category         String
  subcategory      String?
  bulletPoint1     String
  bulletPoint2     String
  bulletPoint3     String
  bulletPoint4     String?
  bulletPoint5     String?
  description      String
  keywords         String?
  images           Json     @default("[]")
  variationTheme   String?
  color            String?
  size             String?
  material         String?
  packageLength    Float?
  packageWidth     Float?
  packageHeight    Float?
  packageWeight    Float?
  packageUnit      String?
  status           String   @default("pending")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
